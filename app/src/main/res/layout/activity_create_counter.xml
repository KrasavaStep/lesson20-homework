<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateCounterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:text="Создание счётчика"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Значение счётчика (целое число)"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/counter_digit_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingLeft="10dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Цвет текста (r, g, b, m)"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/color_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="r"
        android:paddingLeft="10dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Номер фона (1 - 4)"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/bg_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="10dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:textSize="20sp"
        android:textColor="@color/text_red"
        android:text="Тут будут ошибки"
        android:gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_create"
        android:layout_marginTop="50dp"
        android:onClick="createCounter"
        />

</LinearLayout>