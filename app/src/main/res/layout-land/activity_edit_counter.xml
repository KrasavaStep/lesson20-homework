<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".EditCounter">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:text="Редактирование счётчика"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Значение счётчика (целое число)"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/edit_counter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:paddingVertical="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        />

    <TextView
        android:id="@+id/edit_error"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@color/text_red"
        android:text="Тут будут ошибки"
        android:gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_edit"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:onClick="editCounter"
        />
    
</LinearLayout>